---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';
import CTASection from '../../components/CTASection.astro';
import { getCollection } from 'astro:content';

// Get all blog posts, sorted by date (newest first)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort((a, b) => 
  b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout title="Blog - Sentiero dei Sette Santi" description="Notizie, eventi e storie dal Sentiero dei Sette Santi">
  <!-- Hero Section -->
  <HeroSection 
    title="Blog"
    subtitle="Notizie, eventi e storie dal cammino spirituale"
  />

  <!-- Blog Posts -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      {sortedPosts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-xl text-gray-600">Nessun articolo disponibile al momento.</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {sortedPosts.map((post) => (
            <BlogPostCard 
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={post.slug}
              {...(post.data.tags && { tags: post.data.tags })}
              {...(post.data.image && { image: post.data.image })}
            />
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection 
    title="Vuoi Condividere la Tua Storia?"
    description="Se hai percorso il Sentiero dei Sette Santi e vuoi raccontare la tua esperienza, contattaci! Saremo felici di pubblicare la tua storia sul nostro blog."
    buttonText="Contattaci"
    buttonLink="mailto:info@settesanti.it"
  />
</Layout>

