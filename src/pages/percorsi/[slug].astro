---
import Layout from '../../layouts/Layout.astro';
import MapComponent from '../../components/MapComponent.astro';
import { trailStages, getTrailStageBySlug, getAllTrailSlugs } from '../../data/trails';

export function getStaticPaths() {
  return getAllTrailSlugs().map(slug => ({
    params: { slug }
  }));
}

const { slug } = Astro.params;
const stage = getTrailStageBySlug(slug!);

if (!stage) {
  return Astro.redirect('/404');
}

// Find previous and next stages
const currentIndex = trailStages.findIndex(s => s.slug === slug);
const previousStage = currentIndex > 0 ? trailStages[currentIndex - 1] : null;
const nextStage = currentIndex < trailStages.length - 1 ? trailStages[currentIndex + 1] : null;
---

<Layout 
  title={`${stage.title} - Sentiero dei Sette Santi`}
  description={stage.description}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-trail-green to-trail-brown text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="text-trail-gold font-bold text-lg mb-2">Tappa {stage.id} di {trailStages.length}</div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{stage.title}</h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-200">{stage.subtitle}</p>
        
        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-2xl mx-auto">
          <div class="text-center">
            <div class="text-2xl font-bold text-trail-gold">{stage.distance}</div>
            <div class="text-sm text-gray-300">Distanza</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-trail-gold">{stage.duration}</div>
            <div class="text-sm text-gray-300">Durata</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-trail-gold">{stage.elevation}</div>
            <div class="text-sm text-gray-300">Dislivello</div>
          </div>
          <div class="text-center">
            <div class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${
              stage.difficulty === 'Facile' ? 'bg-green-500 text-white' :
              stage.difficulty === 'Intermedio' ? 'bg-yellow-500 text-white' :
              'bg-red-500 text-white'
            }`}>
              {stage.difficulty}
            </div>
            <div class="text-sm text-gray-300 mt-1">Difficolt√†</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Description and Map -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-trail-green mb-6">Descrizione del Percorso</h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-8">{stage.description}</p>
          
          <h3 class="text-2xl font-bold text-trail-green mb-4">Punti di Interesse</h3>
          <ul class="space-y-3">
            {stage.highlights.map(highlight => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-trail-gold mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{highlight}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div>
          <h3 class="text-2xl font-bold text-trail-green mb-4">Mappa del Percorso</h3>
          <MapComponent 
            height="400px" 
            center={stage.coordinates} 
            zoom={12}
            gpxUrl={stage.gpxUrl}
          />
          
          {stage.gpxUrl && (
            <div class="mt-4">
              <a 
                href={stage.gpxUrl} 
                download 
                class="inline-flex items-center px-4 py-2 bg-trail-green text-white rounded-lg hover:bg-trail-brown transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Scarica traccia GPX
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Accommodation -->
  {stage.accommodation.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-trail-green mb-8 text-center">Dove Alloggiare</h2>
        
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {stage.accommodation.map(acc => (
            <div class="bg-white rounded-lg shadow-lg p-6">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-bold text-trail-green">{acc.name}</h3>
                <span class="bg-trail-gold text-white px-3 py-1 rounded-full text-sm font-medium">
                  {acc.type}
                </span>
              </div>
              <p class="text-gray-700 mb-4">{acc.description}</p>
              {acc.contact && (
                <a 
                  href={`mailto:${acc.contact}`}
                  class="text-trail-green hover:text-trail-brown font-medium"
                >
                  {acc.contact}
                </a>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Navigation -->
  <section class="py-12 bg-trail-green text-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-center md:text-left">
          {previousStage ? (
            <a 
              href={`/percorsi/${previousStage.slug}`}
              class="inline-flex items-center text-trail-gold hover:text-white transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              <div>
                <div class="text-sm opacity-80">Tappa Precedente</div>
                <div class="font-semibold">{previousStage.title}</div>
              </div>
            </a>
          ) : (
            <div class="text-gray-400">
              <div class="text-sm">Tappa Precedente</div>
              <div class="font-semibold">Prima tappa</div>
            </div>
          )}
        </div>
        
        <div class="text-center">
          <a 
            href="/"
            class="bg-trail-gold text-trail-green px-6 py-3 rounded-lg font-semibold hover:bg-yellow-400 transition-colors"
          >
            Tutte le Tappe
          </a>
        </div>
        
        <div class="text-center md:text-right">
          {nextStage ? (
            <a 
              href={`/percorsi/${nextStage.slug}`}
              class="inline-flex items-center text-trail-gold hover:text-white transition-colors"
            >
              <div>
                <div class="text-sm opacity-80">Prossima Tappa</div>
                <div class="font-semibold">{nextStage.title}</div>
              </div>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          ) : (
            <div class="text-gray-400">
              <div class="text-sm">Prossima Tappa</div>
              <div class="font-semibold">Ultima tappa</div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>