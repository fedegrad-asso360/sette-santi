---
import PricingCard from './PricingCard.astro';
import type { Language } from '../i18n';
import { useTranslations } from '../i18n';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const pricingOptions = [
  {
    icon: 'üéí',
    title: t('booking.individual.title'),
    description: t('booking.individual.description'),
    features: [
      { text: 'Mappe e tracce GPS' },
      { text: 'Lista alloggi consigliati' },
      { text: 'Supporto telefonico' }
    ],
    price: t('booking.from') + ' ‚Ç¨299',
    highlighted: false
  },
  {
    icon: 'üë•',
    title: t('booking.group.title'),
    description: t('booking.group.description'),
    features: [
      { text: 'Guida esperta' },
      { text: 'Trasporto bagagli' },
      { text: 'Pasti inclusi' },
      { text: 'Alloggi prenotati' }
    ],
    price: t('booking.from') + ' ‚Ç¨799',
    badge: t('booking.badge.popular'),
    highlighted: true
  },
  {
    icon: '‚≠ê',
    title: t('booking.premium.title'),
    description: t('booking.premium.description'),
    features: [
      { text: 'Alloggi di lusso' },
      { text: 'Chef personale' },
      { text: 'Trasferimenti privati' },
      { text: 'Guida spirituale' }
    ],
    price: t('booking.from') + ' ‚Ç¨1,499',
    highlighted: false
  }
];
---

<section id="booking" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-trail-green mb-4">{t('booking.title')}</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {t('booking.subtitle')}
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {pricingOptions.map(option => (
        <PricingCard 
          icon={option.icon}
          title={option.title}
          description={option.description}
          features={option.features}
          price={option.price}
          {...(option.badge && { badge: option.badge })}
          highlighted={option.highlighted}
        />
      ))}
    </div>
  </div>
</section>
