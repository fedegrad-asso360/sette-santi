---
export interface StatItem {
  value: string | number;
  label: string;
}

export interface Props {
  stats: StatItem[];
  columns?: 2 | 3 | 4;
  className?: string;
}

const { stats, columns = 3, className = "" } = Astro.props;

const gridCols = {
  2: 'grid-cols-2',
  3: 'grid-cols-3',
  4: 'grid-cols-2 md:grid-cols-4'
};
---

<div class={`grid ${gridCols[columns]} gap-6 text-center ${className}`}>
  {stats.map(stat => (
    <div>
      <div class="text-3xl font-bold text-trail-brown">{stat.value}</div>
      <div class="text-sm text-gray-600">{stat.label}</div>
    </div>
  ))}
</div>
