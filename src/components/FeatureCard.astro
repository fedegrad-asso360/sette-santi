---
export interface Props {
  icon: string;
  title: string;
  description: string;
  className?: string;
}

const { icon, title, description, className = "" } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-lg p-8 text-center hover:shadow-xl transition-shadow ${className}`}>
  <div class="text-5xl mb-4">{icon}</div>
  <h3 class="text-xl font-bold text-trail-green mb-3">{title}</h3>
  <p class="text-gray-700">
    {description}
  </p>
</div>
