---
export interface Props {
  name: string;
  type: string;
  description: string;
  contact?: string | undefined;
}

const { name, type, description, contact } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-bold text-trail-green">{name}</h3>
    <span class="bg-trail-gold text-white px-3 py-1 rounded-full text-sm font-medium">
      {type}
    </span>
  </div>
  <p class="text-gray-700 mb-4">{description}</p>
  {contact && (
    <a 
      href={`mailto:${contact}`}
      class="text-trail-green hover:text-trail-brown font-medium"
    >
      {contact}
    </a>
  )}
</div>
