---
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[] | undefined;
  image?: string | undefined;
}

const { title, description, date, slug, tags = [], image } = Astro.props;

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('it-IT', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
  {image ? (
    <Image src={image} alt={title} width={600} height={400} class="h-48 w-full object-cover" />
  ) : (
    <div class="h-48 bg-gradient-to-br from-trail-sky to-trail-green flex items-center justify-center">
      <div class="text-white text-6xl opacity-50">üìù</div>
    </div>
  )}
  <div class="p-6">
    <div class="flex items-center gap-2 mb-3">
      <time class="text-sm text-gray-500" datetime={date.toISOString()}>
        {formatDate(date)}
      </time>
    </div>
    <h2 class="text-2xl font-bold text-trail-green mb-3 hover:text-trail-brown transition-colors">
      <a href={`/blog/${slug}`}>
        {title}
      </a>
    </h2>
    <p class="text-gray-700 mb-4 line-clamp-3">
      {description}
    </p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map((tag) => (
          <span class="px-3 py-1 bg-trail-gold bg-opacity-20 text-trail-brown text-xs rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )}
    <a 
      href={`/blog/${slug}`}
      class="inline-flex items-center text-trail-green hover:text-trail-brown font-medium transition-colors"
    >
      Leggi di pi√π
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
