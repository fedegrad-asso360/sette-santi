---
import { Image } from 'astro:assets';

export interface Props {
  id: number;
  name: string;
  subtitle: string;
  description: string;
  slug: string;
  festivity?: string | undefined;
  image?: string | undefined;
}

const { id, name, subtitle, slug, festivity, image } = Astro.props;
const placeholderImage = `https://placehold.co/600x400/5e3b20/ffffff?text=${encodeURIComponent(name)}`;
const imageUrl = image || placeholderImage;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
  <div class="h-48 bg-gray-200 relative overflow-hidden">
    <Image 
      src={imageUrl} 
      alt={name}
      width={600}
      height={400}
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-trail-brown/80 to-transparent flex items-center justify-center">
      <div class="text-center text-white">
        <div class="text-6xl font-bold mb-2">{id}</div>
        <div class="text-sm opacity-90">Santo {id} di 7</div>
      </div>
    </div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-trail-brown mb-2">{name}</h3>
    <p class="text-trail-gold mb-3 text-sm font-medium">{subtitle}</p>
    {festivity && (
      <div class="flex items-center text-sm text-gray-500 mb-4">
        <svg class="w-4 h-4 mr-2 text-trail-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>Festa: {festivity}</span>
      </div>
    )}
    <div class="flex justify-end">
      <a 
        href={`/saints/${slug}`} 
        class="text-trail-brown hover:text-trail-gold font-medium text-sm flex items-center transition-colors"
      >
        Scopri di pi√π
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</div>
