---
export interface NavigationLink {
  slug: string;
  title: string;
}

export interface Props {
  previous: NavigationLink | null;
  next: NavigationLink | null;
  basePath: string;
  previousLabel?: string;
  nextLabel?: string;
}

const { 
  previous, 
  next, 
  basePath,
  previousLabel = 'Precedente',
  nextLabel = 'Successivo'
} = Astro.props;
---

<nav class="border-t border-gray-200 pt-8 mt-12">
  <div class="flex justify-between items-center">
    <div class="flex-1">
      {previous ? (
        <a 
          href={`${basePath}/${previous.slug}`}
          class="group flex items-center text-trail-brown hover:text-trail-gold transition-colors"
        >
          <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <div>
            <div class="text-sm text-gray-500">{previousLabel}</div>
            <div class="font-medium">{previous.title}</div>
          </div>
        </a>
      ) : (
        <div></div>
      )}
    </div>
    <div class="flex-1 text-right">
      {next ? (
        <a 
          href={`${basePath}/${next.slug}`}
          class="group inline-flex items-center text-trail-brown hover:text-trail-gold transition-colors"
        >
          <div class="text-right">
            <div class="text-sm text-gray-500">{nextLabel}</div>
            <div class="font-medium">{next.title}</div>
          </div>
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ) : (
        <div></div>
      )}
    </div>
  </div>
</nav>
