---
export interface Props {
	height?: string;
	center?: [number, number];
	zoom?: number;
	gpxUrl?: string;
}

const { 
	height = "400px", 
	center = [45.4642, 9.1900], // Default to Milano coordinates
	zoom = 10,
	gpxUrl 
} = Astro.props;
---

<div class="map-container bg-gray-200 border-2 border-dashed border-gray-400 rounded-lg flex items-center justify-center relative" style={`height: ${height}`}>
	<!-- Placeholder content -->
	<div class="text-center p-6">
		<svg class="w-16 h-16 mx-auto text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
				d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
		</svg>
		<h3 class="text-lg font-semibold text-gray-700 mb-2">Mappa Interattiva</h3>
		<p class="text-gray-600 text-sm">Implementazione Leaflet/Mapbox in arrivo</p>
		{gpxUrl && (
			<p class="text-xs text-gray-500 mt-2">GPX: {gpxUrl}</p>
		)}
	</div>
	
	<!-- Fake map elements for demonstration -->
	<div class="absolute inset-0 opacity-10">
		<div class="w-full h-full bg-gradient-to-br from-green-200 via-blue-100 to-brown-200"></div>
		<!-- Simulated trail path -->
		<svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 300">
			<path 
				d="M50,250 Q150,200 200,150 T350,50" 
				stroke="red" 
				stroke-width="3" 
				stroke-dasharray="5,5" 
				fill="none"
				class="opacity-60"
			/>
			<!-- Simulated markers -->
			<circle cx="50" cy="250" r="5" fill="green" />
			<circle cx="150" cy="180" r="5" fill="blue" />
			<circle cx="250" cy="120" r="5" fill="blue" />
			<circle cx="350" cy="50" r="5" fill="red" />
		</svg>
	</div>
</div>

<style>
	.map-container {
		position: relative;
		overflow: hidden;
	}
</style>