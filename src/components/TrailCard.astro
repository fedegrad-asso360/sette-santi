---
export interface Props {
  id: number;
  title: string;
  subtitle: string;
  distance: string;
  duration: string;
  difficulty: 'Facile' | 'Intermedio' | 'Difficile';
  slug: string;
}

const { id, title, subtitle, distance, duration, difficulty, slug } = Astro.props;

const difficultyColors = {
  'Facile': 'bg-green-100 text-green-800',
  'Intermedio': 'bg-yellow-100 text-yellow-800',
  'Difficile': 'bg-red-100 text-red-800'
};
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
  <div class="h-48 bg-gradient-to-br from-trail-sky to-trail-green flex items-center justify-center">
    <div class="text-center text-white">
      <div class="text-6xl font-bold mb-2">{id}</div>
      <div class="text-sm opacity-80">Tappa {id}</div>
    </div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-trail-green mb-2">{title}</h3>
    <p class="text-gray-600 mb-4 text-sm">{subtitle}</p>
    <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
        </svg>
        {distance}
      </span>
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {duration}
      </span>
    </div>
    <div class="flex justify-between items-center">
      <span class={`px-3 py-1 rounded-full text-xs font-medium ${difficultyColors[difficulty]}`}>
        {difficulty}
      </span>
      <a 
        href={`/percorsi/${slug}`} 
        class="text-trail-green hover:text-trail-brown font-medium text-sm"
      >
        Scopri di più →
      </a>
    </div>
  </div>
</div>
