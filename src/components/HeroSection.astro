---
export interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  className?: string;
}

const { title, subtitle, badge, className = "" } = Astro.props;
---

<section class={`bg-gradient-to-br from-trail-green to-trail-brown text-white py-16 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      {badge && <div class="text-trail-gold font-bold text-lg mb-2">{badge}</div>}
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-trail-gold">{title}</h1>
      {subtitle && (
        <p class="text-xl md:text-2xl text-gray-200">
          {subtitle}
        </p>
      )}
      <slot />
    </div>
  </div>
</section>
